{% extends "base.twig" %}

{% block editor_js %}
    <script src="http://cdn.tinymce.com/4/tinymce.min.js"></script>
{% endblock %}

{% block page %}
    <div class="container main-container">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Add New Article</h3>
                    </div>

                    <div class="box-body">
                        <form>
                            <div class="form-group">
                                <label for="title">Titolo</label>
                                <input type="text" class="form-control" id="title" placeholder="Mio Articolo">
                            </div>

                            <div class="form-group">
                                <label for="slug">Slug</label>
                                <input type="text" class="form-control" id="slug" placeholder="mio-articolo">
                            </div>

                            <div class="form-group">
                                <label for="content">Contenuto</label>
                                <input type="text" class="form-control" id="content" placeholder="Contenuto">
                            </div>

                            <div class="form-group">
                                <label class="btn btn-primary btn-file">
                                    Browse <input type="file" class="hidden">
                                </label>
                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" id="public">
                                <label for="public">
                                    Pubblico
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        tinymce.init({
            selector: '#content',
            height: 500,
            menubar: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table contextmenu paste code'
            ],
            toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | code',
            content_css: '//www.tinymce.com/css/codepen.min.css'
        });
    </script>
{% endblock %}