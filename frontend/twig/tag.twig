{% extends "base.twig" %}

{% block page %}
    <div class="container main-container">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Add New Tag</h3>
                    </div>

                    <div class="box-body">
                        <form>
                            <div class="form-group">
                                <label for="title">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Symfony">
                            </div>

                            <div class="form-group">
                                <label for="slug">Description</label>
                                <input type="text" class="form-control" id="description" placeholder="Descrizione">
                            </div>
                            <div class="form-group">
                                <label for="slug">Slug</label>
                                <input type="text" class="form-control" id="slug" placeholder="symfony">
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
