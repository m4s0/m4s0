<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Login</title>

    <link href="/css/main.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

<div class="row login">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center lead">{{ 'login.form_name'|trans({}, 'admin') }}</h2>
        <hr/>

        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("admin_login") }}"
              method="post">
            <div class="form-group">
                <label for="username">{{ 'login.username'|trans({}, 'admin') }}</label>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lg fa-fw fa-user" aria-hidden="true"></i>
                    </span>
                    <input type="text"
                           id="username"
                           name="_username"
                           required="required"
                           class="form-control input-lg"
                           placeholder="{{ 'login.enter_username'|trans({}, 'admin') }}"/>
                </div>
            </div>

            <div class="form-group">
                <label for="password">{{ 'login.password'|trans({}, 'admin') }}</label>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lg fa-fw fa-lock" aria-hidden="true"></i>
                    </span>
                    <input type="password"
                           id="password"
                           name="_password"
                           required="required"
                           class="form-control input-lg"
                           placeholder="{{ 'login.enter_password'|trans({}, 'admin') }}"/>
                </div>
            </div>

            <div class="checkbox checkbox-primary">
                <input type="checkbox"
                       id="remember_me"
                       name="_remember_me"
                       value="on"/>
                <label for="remember_me">
                    {{ 'login.remember_me'|trans({}, 'admin') }}
                </label>
            </div>

            {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">#}

            <hr/>

            <div class="text-center">
                <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-lg btn-block">
                    <i class="fa fa-lg fa-fw fa-sign-in" aria-hidden="true"></i>&nbsp;
                    {{ 'login.submit'|trans({}, 'admin') }}
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/main.min.js"></script>

</body>
</html>
